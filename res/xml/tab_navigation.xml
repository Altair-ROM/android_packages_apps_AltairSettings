    <PreferenceCategory
        android:key="category_navbar_general"
        android:title="@string/navbar_general_title" >

        <com.altair.settings.preference.CustomSeekBarPreference
            android:key="navbar_height_portrait"
            android:title="@string/portrait_title"
            android:max="135"
            settings:min="65"
            settings:units="%" />

        <com.altair.settings.preference.CustomSeekBarPreference
