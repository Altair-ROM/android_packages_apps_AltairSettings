<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/tab_navigation_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <SwitchPreference
        android:key="navbar_visibility"
        android:title="@string/navbar_visibility" />

    <ListPreference
        android:key="navbar_mode"
        android:title="@string/navbar_mode"
        android:icon="@drawable/ic_navbar_navigation_mode"
        android:summary="@string/navbar_mode_summary"
        android:entries="@array/systemui_navbar_mode_entries"
        android:entryValues="@array/systemui_navbar_mode_values" />

    <PreferenceCategory
        android:key="category_navbar_interface"
        android:title="@string/navbar_interface_title" >

        <PreferenceScreen
            android:key="stock_navbar_settings"
            android:title="@string/stock_navbar_settings_title"
            android:icon="@drawable/ic_navbar_default_settings"
            android:summary="@string/stock_navbar_settings_summary"
            android:fragment="com.altair.settings.fragments.StockNavbarSettings" />

        <PreferenceScreen
            android:key="smartbar_settings"
            android:title="@string/smartbar_settings_title"
            android:icon="@drawable/ic_navbar_smartbar_settings"
            android:summary="@string/smartbar_settings_summary"
            android:fragment="com.altair.settings.fragments.SmartbarSettings" />

        <PreferenceScreen
            android:key="fling_settings"
            android:title="@string/fling_settings"
            android:icon="@drawable/ic_navbar_fling_settings"
            android:summary="@string/fling_settings_summary"
            android:fragment="com.altair.settings.fragments.FlingSettings" />

    </PreferenceCategory>

